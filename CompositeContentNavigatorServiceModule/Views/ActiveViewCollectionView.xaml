                    Command="{Binding DataContext.NavigateCommand, ElementName=ListView}"
                    CommandParameter="{Binding}"
                    Content="{Binding Path=(CompositeContentNavigator:ViewManager.HeaderDisplay)}"
                    DeleteCommand="{Binding DataContext.DeleteCommand, ElementName=ListView}"
                    DeleteCommandParameter="{Binding}" PreviewMouseDown="Chip_PreviewMouseDown"
                    Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                    Icon="{Binding Path=(CompositeContentNavigator:ViewManager.HeaderChipIcon)}"
                    IsDeletable="True" />
